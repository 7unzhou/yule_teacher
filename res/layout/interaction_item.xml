<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/intera_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_grouptitle_list"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="@color/scoregray"
        android:textSize="18sp" >
    </TextView>

    <TextView
        android:id="@+id/tv_null_intera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_day_normal"
        android:gravity="center"
        android:text="今日无新内容"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/rl_interacontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/intera_header"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true" >
        </ImageView>

        <ImageView
            android:id="@+id/intera_item_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_arrow_list" >
        </ImageView>

        <TextView
            android:id="@+id/intera_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/intera_header"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/intera_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/intera_item_name"
            android:layout_below="@+id/intera_item_name"
            android:singleLine="true"
            android:textColor="@color/scoregray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/intera_item_appraisal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/intera_item_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/intera_item_content"
            android:textColor="@android:color/white" />
    </RelativeLayout>

</LinearLayout>